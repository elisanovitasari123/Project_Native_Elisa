<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cv"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#fefefe"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="130dp"
            android:layout_height="130dp"
            card_view:srcCompat="@drawable/bgroom" />

        <TextView
            android:id="@+id/textViewKodeHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemi"
            android:layout_alignParentRight="true"
            android:textSize="11dp"
            android:text="Kode" />

        <TextView
            android:id="@+id/textViewTipeKamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgBg"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:text="Tipe Kamar" />

        <TextView
            android:id="@+id/textViewCekin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_toRightOf="@id/imgBg"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/textViewTipeKamar"
            android:fontFamily="@font/poppinssemi"
            android:text="Cekin" />
        <TextView
            android:id="@+id/textViewRowCekout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_toRightOf="@id/imgBg"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/textViewCekin"
            android:fontFamily="@font/poppinssemi"
            android:text="Cekout" />

        <TextView
            android:id="@+id/textViewHarga"
            android:layout_width="wrap_content"
            android:layout_below="@id/textViewCekin"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinssemi"
            android:layout_alignParentEnd="true"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:text="Harga" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgBg"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textViewTipeKamar"
            card_view:srcCompat="@drawable/cekinnew" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="17dp"
            android:layout_toRightOf="@id/imgBg"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageView2"
            card_view:srcCompat="@drawable/cekoutnew" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>